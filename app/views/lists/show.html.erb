
<div class="banner-2 background-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key %>')">
  <div class="container">
    <h1 class="justify-content-center"><%= @list.name %></h1>
  </div>
</div>

<div class= "container">

<div class="card p-4" style="margin-bottom: 50px; margin-top:20px">
<h3>Add a Bookmark</h3>
<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie , input_html: { class: 'select2' } %>
  <%= f.button :submit , class:"btn btn-primary" %>
<% end %>


<div class="d-flex justify-content-center ">
 <div class = movies px-3>

<% @list.bookmarks.each do |bookmark| %>
<div class="card-trip" >
  
  <img src=<%= bookmark.movie.poster_url %>    />

  <div  class="card-trip-top">
   <h2><strong><%= bookmark.movie.title %></strong>  (<%= bookmark.movie.rating%> <i style="color:yellow" class="fas fa-star"></i>)</h2>
      <p><%= bookmark.movie.overview %></p>
      </div>
      
<hr class="solid">
  <div class="card-trip-infos">
  <div style="width: 70%">
    <p style="font-size: 15px"> <strong>"</strong><%= bookmark.comment %><strong>"</strong></p>
     </div>
     <div>
     <%= link_to "Remove",
                  bookmark_path(bookmark),
                  method: :delete,
                  data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </div>
  </div>
</div>
<% end %>
  </div>



</div>
