<h1><%= @list.name%></h1>


<ul>
<% @list.bookmarks.each do |bookmark| %>
<li>
<%=bookmark.comment%>
<%=bookmark.movie.title%>
<%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
</li>
<% end %>
</ul>


<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.button :submit %>
<% end %>




<%=link_to "Back to lists", lists_path %>